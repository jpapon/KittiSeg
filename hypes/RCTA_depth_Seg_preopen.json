{
  "model": {
    "input_file": "../inputs/RCTA_depth_seg_input.py",
    "architecture_file" : "../encoder/fcn8_vgg_RCTA_depth.py",
    "objective_file" : "../decoder/RCTA_multiloss.py",
    "optimizer_file" : "../optimizer/generic_optimizer.py",
    "evaluator_file" : "../evals/RCTA_depth_eval.py"
  },
  "path": ["../incl"],

  "data": {
    "train_file" : "data_RCTA/preopen/train.txt",
    "val_file" : "data_RCTA/preopen/val.txt",
    "unknown_color" : [0,0,0,0],
    "ungraspable_color" : [1,0,0,255],
    "graspable_color" : [2,0,255,0],
    "vgg_url": "https://dl.dropboxusercontent.com/u/50333326/vgg16.npy",
    "kitti_url": ""
  },

  "arch": {
    "num_classes" : 3,
    "image_size" : 50,
    "weight": [1, 1, 1],
    "num_channels" : 3,
    "whitening": false
  },

  "jitter": {
    "random_resize": false,
    "lower_size": 0.4,
    "upper_size": 1.7,
    "sig": 0.15,
    "res_chance": 0.4,
    "random_crop": true,
    "max_crop": 32,
    "crop_chance": 0.8,
    "fix_shape": false,
    "reseize_image": false,
    "image_height" : 480,
    "image_width" : 640,

    "augment_level": 0
  },

  "logging": {
    "display_iter": 100,
    "eval_iter": 1000,
    "write_iter": 5000,
    "save_iter": 5000,
    "image_iter": 5000
  },

  "solver": {
      "opt": "Adam",
      "batch_size": 1,
      "epsilon": 0.000001,
      "adam_eps": 0.000001,
      "threads": 4,
      "learning_rate": 1e-5,
      "learning_rate_step": null,
      "max_steps": 30000
  },
  "use_fc_wd": true,
  "loss": "xentropy",
  "clip_norm" : 1.0,
  "wd": 5e-4
}
